{
  "name": "jolt-notes",
  "version": "1.0.0",
  "description": "An app for taking notes",
  "main": "main.js",
  "scripts": {
    "build": "wasm-pack build --target web && (rm -rf ./public/pkg; mv pkg ./public)",
    "clean": "cargo clean && rm -rf pkg",
    "serve": "npx serve ./public",
    "watch-build": "cargo watch -i pkg -i public -x build -s 'npm run build'",
    "watch": "run-p watch-build serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NewDawn0/jolt.git"
  },
  "keywords": [
    "Notes",
    "Note taking"
  ],
  "author": "NewDawn0",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/NewDawn0/jolt/issues"
  },
  "homepage": "https://github.com/NewDawn0/jolt#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
